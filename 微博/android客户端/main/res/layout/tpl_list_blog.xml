<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" 
	android:layout_width="match_parent"
	android:layout_height="wrap_content" 
	android:focusable="false"
	>
	<ImageView 
		android:id="@+id/tpl_list_blog_image_face"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_margin="5dp"
		android:src="@drawable/face" 
		android:scaleType="fitXY"
		android:focusable="false"/>
	<LinearLayout 
		android:orientation="vertical" 
		android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:focusable="false"
		android:background="@drawable/xml_list_blog_bg">
		<TextView 
			android:id="@+id/tpl_list_blog_text_content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="top" 
			android:paddingBottom="5dp"
			android:paddingLeft="12dp"
			android:paddingRight="10dp"
			android:focusable="false" 
			android:text="loading"
			android:textSize="12dp"
			android:layout_weight="1"/>
		<ImageView 
			android:id="@+id/tpl_list_blog_text_picture"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:paddingLeft="12dp"
			android:focusable="false"
			android:visibility="gone"/>
		<LinearLayout 
			android:orientation="horizontal" 
			android:layout_width="match_parent"
			android:layout_height="wrap_content" 
			android:focusable="false">
			<TextView android:id="@+id/tpl_list_blog_text_uptime"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingLeft="12dp"
				android:paddingRight="10dp"
				android:focusable="false" 
				android:text="loading"
				android:textSize="10dp"/>
			<TextView 
				android:id="@+id/tpl_list_blog_text_comment"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:gravity="right"
				android:paddingLeft="12dp"
				android:paddingRight="10dp"
				android:focusable="false" 
				android:text="loading"
				android:textSize="10dp"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>